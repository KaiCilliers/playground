<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.nav.AnotherFragment">

        <TextView
            android:id="@+id/tv_frag_another"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/another_fragment"
            android:textSize="@dimen/font_size_24"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_nested_graph"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/go_to_nested_graph_via_global_action"
            android:textSize="@dimen/font_size_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_frag_another" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>